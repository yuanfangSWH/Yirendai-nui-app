
.content {
	height: 1200rpx;
}
.login-news {
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: #fff;
	overflow: auto;
	height: 100%;
}
.login-logo {
	overflow: hidden;
	padding: 20px 30px;
}
.login-logo ._a {
	float: right;
	font-size: 4vw;
}
.form-login {
	margin: 0 30px;
}
.form-login ._h2 {
	font-size: 8vw;
	font-weight: 400;
	margin: 50px 0 20px;
}
.form-login input {
	display: block;
	border-style: none;
	line-height: 8vw;
	height: 8vw;
	padding: 3vw 0;
	border-bottom: 1px solid #dcdcdc;
	width: 100%;
	font-size: 4.2vw;
	margin-top: 15px;
	outline: none;
	-webkit-box-sizing: content-box;
	        box-sizing: content-box;
}
.form-login ._span {
	font-size: 12px;
	color: #b1b1b1;
	display: block;
	padding-top: 10px;
}
.form-login button.btn-tj {
	background-color: #257bff;
	color: #fff;
	width: 100%;
	border-radius: 100px;
	border-style: none;
	line-height: 12vw;
	height: 12vw;
	font-size: 4vw;
	margin-top: 30px;
	outline: none;
}
.send-code {
	position: relative;
}
.send-code .sendcode {
	position: absolute;
	right: 0;
	top: 0;
	bottom: 0;
	font-weight: 400;
	outline: none;
	border-style: none;
}
.sendcode {
	width: 30%;
	border-radius: 30px;
	background-color: #257bff;
	border: none;
	height: 36px;
	font-size: 14px;
	line-height: 36px;
	text-align: center;
	color: #ffffff;
}
.n_border {
	border: none !important;
	color: #b4b6bd !important;
}

